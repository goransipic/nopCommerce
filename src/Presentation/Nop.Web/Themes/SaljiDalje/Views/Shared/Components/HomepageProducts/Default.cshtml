@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="container">
        <div class="container">
            <div class="d-sm-flex align-items-center justify-content-between mb-4 pb-2">
                <h2 class="h3 mb-sm-0">@T("Homepage.Products")</h2>
                <a class="btn btn-link fw-normal ms-sm-3 p-0" href="city-guide-catalog.html">
                    View all<i class="fi-arrow-long-right ms-2"></i>
                </a>
            </div>
        </div>
        <div class="container py-5 pt-xxl-4 mt-md-2 mb-md-4">
            <div class="row row-cols-lg-5 row-cols-sm-2 row-cols-1 g-3 g-xl-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card">
                          <img src="@item.DefaultPictureModel.ImageUrl" class="card-img-top" alt="Card image">
                          <div class="card-body">
                            <h5 class="card-title text-truncate">@item.Name</h5>
                            <p class="card-text fs-sm text-truncate">@item.ProductPrice.Price</p>
                            <a href="@Url.RouteUrl("Product", new {SeName = item.SeName})" class="stretched-link"></a>
                          </div>
                        </div>
                    </div>
                }
                @foreach (var item in Model)
                                {
                                    <div class="col">
                                        <div class="card">
                                          <img src="@item.DefaultPictureModel.ImageUrl" class="card-img-top" alt="Card image">
                                          <div class="card-body">
                                            <h5 class="card-title text-truncate">@item.Name</h5>
                                            <p class="card-text fs-sm text-truncate">@item.ProductPrice.Price</p>
                                            
                                          </div>
                                        </div>
                                    </div>
                                }
                 @foreach (var item in Model)
                                                {
                                                    <div class="col">
                                                        <div class="card">
                                                          <img src="@item.DefaultPictureModel.ImageUrl" class="card-img-top" alt="Card image">
                                                          <div class="card-body">
                                                            <h5 class="card-title text-truncate">@item.Name</h5>
                                                            <p class="card-text fs-sm text-truncate">@item.ProductPrice.Price</p>
                                                            
                                                          </div>
                                                        </div>
                                                    </div>
                                                }
            </div>
        </div>
    </section>
