@model LoginModel
@using Nop.Core
@using Nop.Core.Domain.Customers

@inject IWebHelper webHelper
@inject IThemeContext themeContext
@{
    Layout = "_ColumnsOne";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    //title
    NopHtml.AddTitleParts(T("PageTitle.Login").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-login-page");

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("Register", new {returnUrl = this.Context.Request.Query["returnUrl"]}, webHelper.GetCurrentRequestProtocol());
}
<div class="row mx-0 align-items-center">
    <div class="row">
        <div class="col-12 pt-4">
            <h2 class="h3 mb-4 mb-sm-5 text-center">@T("Account.Login.Welcome")</h2>
        </div>
    </div>
    @*<div class="col-md-6 border-end-md p-4 p-sm-4">
        <img class="d-block mx-auto" src="~/Themes/@themeName/Content/img/signin-modal/signin.svg" width="344" alt="Illustartion">
        <div class="mt-4 mt-sm-5 text-center">Don't have an account? <a href="#" onclick="location.href='@registerUrl'">@T("Account.Register")</a></div>
    </div>*@
    <div class="col-sm-10 col-md-6 mx-auto px-4 pt-2 pb-4 px-sm-5 pb-sm-5 pt-md-3">
        <form class="needs-validation" asp-route="Login" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly">@T("Account.Login.Unsuccessful")</div>
            <div class="mb-4">
                <label asp-for="Email" class="form-label mb-2" for="signin-email"></label>
                <input asp-for="Email" class="form-control" type="email" id="signin-email" autofocus="autofocus"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="mb-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <label asp-for="Password" class="form-label mb-0" for="signin-password"></label>
                    <a class="fs-sm" asp-route="PasswordRecovery">@T("Account.Login.ForgotPassword")</a>
                </div>
                <div class="password-toggle">
                    <input asp-for="Password" class="form-control" type="password" id="signin-password"/>
                    <label class="password-toggle-btn" aria-label="Show/hide password">
                        <input class="password-toggle-check" type="checkbox">
                        <span class="password-toggle-indicator"></span>
                    </label>
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <button class="btn btn-primary btn-lg rounded-pill w-100" type="submit">
                @T("Account.Login.LoginButton")
            </button>
        </form>
        <div class="mt-4 mt-sm-5 text-center">Don't have an account? <a href="#" onclick="location.href='@registerUrl'">@T("Account.Register")</a></div>
        <div class="d-flex align-items-center py-3 mb-3">
            <hr class="w-100">
            <div class="px-3">ili</div>
            <hr class="w-100">
        </div>
        <a class="btn btn-outline-info rounded-pill w-100 mb-3" href="#">
            <i class="fi-google fs-lg me-1"></i>Sign in with Google
        </a>
        <a class="btn btn-outline-info rounded-pill w-100 mb-3" href="#">
            <i class="fi-facebook fs-lg me-1"></i>Sign in with Facebook
        </a>
    </div>
</div>

