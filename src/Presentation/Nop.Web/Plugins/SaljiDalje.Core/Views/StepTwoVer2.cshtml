@using Nop.Web.Models.Catalog
@using NUglify.Helpers
@using SaljiDalje.Core.Controllers
@model StepTwoModel

@{
    Layout = "_ColumnsOne";
}
<!-- Page content-->
<!-- Page content-->
<div class="row mt-5 mb-md-4 py-5">
<div class="col-lg-8">
<nav class="mb-3 pt-md-3" aria-label="Breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="car-finder-home.html">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Objavi oglas</li>
    </ol>
</nav>
<!-- Page title-->
<h1 class="h2 pb-4 mb-3">Objavi oglas</h1>
<!-- Steps-->
<form asp-controller="MakeNewAd" asp-action="StepTwoFinish">
    <input type="hidden" asp-for="categoryId">
    <!-- Step 3: Work Experience-->
    <section class="card card-body border-0 shadow-sm p-4 mb-4">
        <h2 class="h4 mb-4"><i class="fi-edit text-primary fs-5 mt-n1 me-2 pe-1"></i>Osnovni podaci</h2>
        <label class="form-label" asp-for="Title">Naslov <span class='text-danger'>*</span></label>
        <div class="row">
            <div class="col-12">
                <input asp-for="Title" class="form-control" type="text">
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-3 mb-3 mt-4">
                <label class="form-label" asp-for="SpecificationAttributeOptionIdStateOptionId">Stanje <span class="text-danger">*</span></label>
                <select asp-for="SpecificationAttributeOptionIdStateOptionId"
                        asp-items="@Model.Stanje"
                        class="form-select">
                    <option value="" disabled="" selected>--Odaberite--</option>
                </select>
                <span asp-validation-for="SpecificationAttributeOptionIdStateOptionId"></span>
            </div>
        </div>
    </section>
    <!-- Price-->
    <section class="card card-body border-0 shadow-sm p-4 mb-4">
        <h2 class="h4 mb-4"><i class="fi-cash text-primary fs-5 mt-n1 me-2"></i>Cijena</h2>
        <label class="form-label" for="sc-price">Cijena <span class="text-danger">*</span></label>
        <div class="d-flex mb-2">
            <select disabled asp-for="Valuta" asp-items="Html.GetEnumSelectList<Valuta>()"
                    class="form-select w-25 me-2 mb-2">
            </select>
            <input asp-for="Cijena" class="form-control w-100 me-2 mb-2" type="number">
            <span asp-validation-for="Cijena"></span>
        </div>
        <div class="form-check form-switch">
            <input asp-for="NegotatiedPrice" class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="NegotatiedPrice"></label>
        </div>
    </section>
    <!-- Photos / video-->
    <section class="card card-body border-0 shadow-sm p-4 mb-4" id="photos">
        <h2 class="h4 mb-4"><i class="fi-image text-primary fs-5 mt-n1 me-2"></i>Photos</h2>
        <div class="alert alert-info mb-4" role="alert">
            <div class="d-flex">
                <i class="fi-alert-circle me-2 me-sm-3"></i>
                <p class="fs-sm mb-1">The maximum photo size is 8 MB. Formats: jpeg, jpg, png.</p>
            </div>
        </div>
        <input asp-for="@Model.ImageFile"
               class="file-uploader file-uploader-grid"
               type="file" multiple data-max-file-size="8MB" accept="image/png, image/jpeg" data-label-idle="&lt;div class=&quot;btn btn-primary rounded-pill mb-3&quot;&gt;&lt;i class=&quot;fi-cloud-upload me-1&quot;&gt;&lt;/i&gt;Upload photos&lt;/div&gt;&lt;br&gt;or drag them in">
    </section>
    <!-- Location-->
    <section class="card card-body border-0 shadow-sm p-4 mb-4" id="location">
        <h2 class="h4 mb-4"><i class="fi-map-pin text-primary fs-5 mt-n1 me-2"></i>Lokacija</h2>
        <div class="row">
            <div class="col mb-3">
                <label class="form-label" asp-for="OdabaranaZupanija">Županija <span class="text-danger">*</span></label>
                <select asp-for="OdabaranaZupanija" asp-items="@Model.Zupanije" class="form-select">
                    <option value="" disabled="" selected>--Odaberi županiju--</option>
                </select>
                <span asp-validation-for="OdabaranaZupanija"></span>
            </div>
        </div>
        <div class="row">
            <div class="col mb-3">
                <label class="form-label" for="ab-city">Grad <span class="text-danger">*</span></label>
                <select class="form-select" id="ab-city">
                    <option value="" disabled="" selected="">--Odaberi grad--</option>
                    <option value="Zagreb">Zagreb</option>
                    <option value="Hamburg">Hamburg</option>
                    <option value="Munich">Munich</option>
                    <option value="Frankfurt am Main">Frankfurt am Main</option>
                    <option value="Stuttgart">Stuttgart</option>
                    <option value="Cologne">Cologne</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col mb-3">
                <label class="form-label" for="ab-district">Naselje <span class="text-danger">*</span></label>
                <select class="form-select" id="ab-district">
                    <option value="" disabled="" selected>--Odaberi naselje--</option>
                    <option value="Maksimir">Maksimir</option>
                    <option value="Charlottenburg">Charlottenburg</option>
                    <option value="Prenzlauer Berg">Prenzlauer Berg</option>
                    <option value="Friedrichshain">Friedrichshain</option>
                    <option value="Kreuzberg">Kreuzberg</option>
                </select>
            </div>
        </div>
        <div class="form-label fw-bold pt-3 pb-2">Display on the map</div>
        <div class="interactive-map rounded-3 leaflet-container leaflet-touch leaflet-fade-anim leaflet-grab leaflet-touch-drag leaflet-touch-zoom" data-map-options="{&quot;mapLayer&quot;: &quot;https://api.maptiler.com/maps/pastel/{z}/{x}/{y}.png?key=5vRQzd34MMsINEyeKPIs&quot;, &quot;coordinates&quot;: [52.52, 13.405], &quot;zoom&quot;: 13, &quot;scrollWheelZoom&quot;: false, &quot;markers&quot;: [{&quot;coordinates&quot;: [52.52, 13.405], &quot;className&quot;: &quot;custom-marker-dot&quot;, &quot;popup&quot;: &quot;<div class='p-3'><h6 class='fs-base'>Berlin Business Hotel</h6><p class='fs-xs text-muted pt-1 mt-n3 mb-0'>Pasewalker Str. 97, Berlin</p></div>&quot;}]}" style="height: 250px; position: relative;" tabindex="0">
            <div class="leaflet-pane leaflet-map-pane" style="transform: translate3d(-30px, 0px, 0px);">
                <div class="leaflet-pane leaflet-tile-pane">
                    <div class="leaflet-layer " style="z-index: 1; opacity: 1;">
                        <div class="leaflet-tile-container leaflet-zoom-animated" style="z-index: 18; transform: translate3d(0px, 0px, 0px) scale(1);">
                            <img crossorigin="" alt="" role="presentation" src="https://api.maptiler.com/maps/pastel/12/2200/1343.png?key=5vRQzd34MMsINEyeKPIs" class="leaflet-tile leaflet-tile-loaded" style="width: 512px; height: 512px; transform: translate3d(138px, -31px, 0px); opacity: 1;"><img crossorigin="" alt="" role="presentation" src="https://api.maptiler.com/maps/pastel/12/2199/1343.png?key=5vRQzd34MMsINEyeKPIs" class="leaflet-tile leaflet-tile-loaded" style="width: 512px; height: 512px; transform: translate3d(-374px, -31px, 0px); opacity: 1;"><img crossorigin="" alt="" role="presentation" src="https://api.maptiler.com/maps/pastel/12/2201/1343.png?key=5vRQzd34MMsINEyeKPIs" class="leaflet-tile leaflet-tile-loaded" style="width: 512px; height: 512px; transform: translate3d(650px, -31px, 0px); opacity: 1;">
                        </div>
                    </div>
                </div>
                <div class="leaflet-pane leaflet-shadow-pane">
                    <img src="../img/map/marker-shadow.png" class="leaflet-marker-shadow custom-marker-dot leaflet-zoom-animated" alt="" style="margin-left: -13px; margin-top: -41px; width: 41px; height: 41px; transform: translate3d(404px, 125px, 0px);">
                </div>
                <div class="leaflet-pane leaflet-overlay-pane"></div>
                <div class="leaflet-pane leaflet-marker-pane">
                    <img src="../img/map/marker-icon.png" class="leaflet-marker-icon custom-marker-dot leaflet-zoom-animated leaflet-interactive" alt="" tabindex="0" style="margin-left: -12px; margin-top: -39px; width: 25px; height: 39px; transform: translate3d(404px, 125px, 0px); z-index: 125;">
                </div>
                <div class="leaflet-pane leaflet-tooltip-pane"></div>
                <div class="leaflet-pane leaflet-popup-pane"></div>
                <div class="leaflet-proxy leaflet-zoom-animated" style="transform: translate3d(1.12667e+06px, 687772px, 0px) scale(4096);"></div>
            </div>
            <div class="leaflet-control-container">
                <div class="leaflet-top leaflet-left">
                    <div class="leaflet-control-zoom leaflet-bar leaflet-control">
                        <a class="leaflet-control-zoom-in" href="#" title="Zoom in" role="button" aria-label="Zoom in">+</a><a class="leaflet-control-zoom-out" href="#" title="Zoom out" role="button" aria-label="Zoom out">−</a>
                    </div>
                </div>
                <div class="leaflet-top leaflet-right"></div>
                <div class="leaflet-bottom leaflet-left"></div>
                <div class="leaflet-bottom leaflet-right">
                    <div class="leaflet-control-attribution leaflet-control"><a href="https://leafletjs.com" title="A JS library for interactive maps">Leaflet</a> | <a href="https://www.maptiler.com/copyright/" target="_blank">© MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">© OpenStreetMap contributors</a></div>
                </div>
            </div>
        </div>
    </section>
    <!-- Features-->
    <section class="card card-body border-0 shadow-sm p-4 mb-4" id="price">
        <h2 class="h4 mb-4"><i class="fi-edit text-primary fs-5 mt-n1 me-2"></i>Description</h2>
        <label class="form-label" asp-for="Description">Description <span class="text-danger">*</span></label>
        <div class="col-md-12 mb-md-0 mb-3">
            <textarea class="form-control" asp-for="Description" rows="6" placeholder="Describe your accommodation"></textarea><span class="form-text">8000 characters left</span>
        </div>
        <label class="form-label d-block fw-bold mb-2 mt-3 pb-1">Dostava</label>
        @{ int i = 0; }
        @foreach (var specificationAttributeOption in Model.Dostava)
        {
            <div class="row row-cols-md-12 row-cols-sm-2 row-cols-1 @(i == Model.Dostava.Count - 1 ? "mb-2" : "")">
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="MogucaDostavaList[i]" value="@specificationAttributeOption.Id" type="checkbox">
                        <label class="form-check-label" asp-for="MogucaDostavaList[i]">@specificationAttributeOption.Name</label>
                    </div>
                </div>
            </div>
            i++;
        }
        <div>
            <label class="form-label d-block fw-bold mb-2 pb-1">Mogućnost plaćanja</label>
            <div class="row row-cols-md-3 row-cols-sm-2 row-cols-1">
                <div class="col">
                    @for (int j = 0; j < 3; j++)
                    {
                        <div class="form-check">
                            <input value="@Model.MogućnostPlaćanja[j].Id"
                                   class="form-check-input"
                                   asp-for="@Model.MogućnostPlaćanjaList[j]"
                                   type="checkbox">
                            <label class="form-check-label" asp-for="@Model.MogućnostPlaćanjaList[j]">@Model.MogućnostPlaćanja[j].Name</label>
                        </div>
                    }
                </div>
                <div class="col">
                    @for (int j = 3; j < 6; j++)
                    {
                        <div class="form-check">
                            <input value="@Model.MogućnostPlaćanja[j].Id"
                                   class="form-check-input"
                                   asp-for="@Model.MogućnostPlaćanjaList[j]"
                                   type="checkbox">
                            <label class="form-check-label" asp-for="@Model.MogućnostPlaćanjaList[j]">@Model.MogućnostPlaćanja[j].Name</label>
                        </div>
                    }
                </div>
                <div class="col">
                    <div class="form-check">
                        <input value="@Model.MogućnostPlaćanja[6].Id"
                               class="form-check-input"
                               asp-for="@Model.MogućnostPlaćanjaList[6]"
                               type="checkbox">
                        <label class="form-check-label" asp-for="@Model.MogućnostPlaćanjaList[6]">@Model.MogućnostPlaćanja[6].Name</label>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Action buttons -->
    <section class="d-sm-flex justify-content-between pt-2">
        <a class="btn btn-outline-primary btn-lg d-block rounded-pill mb-3 mb-sm-2" href="#preview-modal" data-bs-toggle="modal">
            <i class="fi-eye-on ms-n1 me-2"></i>Preview
        </a>
        <button class="btn btn-primary btn-lg d-block rounded-pill mb-2" type="submit">Save and continue</button>
    </section>
</form>
</div>
<aside class="col-lg-3 offset-lg-1 d-none d-lg-block">
    <div class="sticky-top pt-5">
        <h6 class="pt-5 mt-3 mb-2">65% content filled</h6>
        <div class="progress mb-4" style="height: .25rem;">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <ul class="list-unstyled">
            <li class="d-flex align-items-center">
                <i class="fi-check text-primary me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#basic-info" data-scroll="" data-scroll-offset="20">Basic info</a>
            </li>
            <li class="d-flex align-items-center">
                <i class="fi-check text-primary me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#location" data-scroll="" data-scroll-offset="20">Location</a>
            </li>
            <li class="d-flex align-items-center">
                <i class="fi-check text-primary me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#details" data-scroll="" data-scroll-offset="20">Property details</a>
            </li>
            <li class="d-flex align-items-center">
                <i class="fi-check text-muted me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#price" data-scroll="" data-scroll-offset="20">Price</a>
            </li>
            <li class="d-flex align-items-center">
                <i class="fi-check text-muted me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#photos" data-scroll="" data-scroll-offset="20">Photos / video</a>
            </li>
            <li class="d-flex align-items-center">
                <i class="fi-check text-primary me-2"></i><a class="nav-link fw-normal ps-1 p-0" href="#contacts" data-scroll="" data-scroll-offset="20">Contacts</a>
            </li>
        </ul>
    </div>
</aside>
</div>