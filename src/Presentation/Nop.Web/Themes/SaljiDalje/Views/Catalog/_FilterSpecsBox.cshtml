@model SpecificationFilterModel


<div class="pb-4 mb-2">
    @* <h3 class="h6">@T("Filtering.SpecificationFilter")</h3> *@
    @{ var i = 0; }
    @foreach (var attr in Model.Attributes)
    {
        <h3 class="h6 @if(i > 0){<text>mt-3</text>}" >@attr.Name</h3>
        i++;
        foreach (var value in attr.Values)
        {
            <div class="form-check">
                <input class="form-check-input" 
                       type="checkbox" 
                       id="attribute-option-@value.Id" 
                       data-option-id="@value.Id" 
                       checked="@value.Selected">
                <label class="form-check-label fs-sm" for="attribute-option-@value.Id">@value.Name</label>
            </div> 
        }
        
    }
</div>

