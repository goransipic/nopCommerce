@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="container">
        @{
            await Html.RenderPartialAsync("_SectionTitle", @T("Homepage.Products").Text);
        }
        <div class="container py-5 pt-xxl-4 mt-md-2 mb-md-4">
            <div class="row row-cols-lg-5 row-cols-sm-4 row-cols-2 g-3 g-xl-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                }
            </div>
        </div>
    </section>
