@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    Layout ="";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var supportRtl = await Html.ShouldUseRtlThemeAsync();
    //add main CSS file
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/theme{(supportRtl ? ".rtl" : "")}.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/tiny-slider/dist/tiny-slider.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/lightgallery/css/lightgallery-bundle.min.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/simplebar/dist/simplebar.min.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/leaflet/dist/leaflet.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.min.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/filepond/dist/filepond.min.css", excludeFromBundle:true);
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/vendor/nouislider/dist/nouislider.min.css", excludeFromBundle:true);
    
    //add jQuery UI css file
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");

}